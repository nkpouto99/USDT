<%-include("../../partials/header")%>


<div class="container-fluid mt--6">
       

    <div class="row">
        <div class="col-12">
    
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-3 header-title">Edit Information</h4>
    
                    <form id="basic-settings">
    
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="firstname">First Name</label>
                                    <input <%=user.firstname && 'disabled' %> type="text" value="<%=user.firstname%>"
                                        class="form-control" id="firstname">
                                </div>
    
                                <div class="form-group">
                                    <label for="middlename">Middle Name</label>
                                    <input <%=user.middlename && 'disabled' %> type="text" value="<%=user.middlename%>"
                                        class="form-control" id="middlename">
                                </div>
    
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input <%=user.email && 'disabled' %> required type="email" value="<%=user.email%>"
                                        class="form-control" id="email">
                                </div>
    
                                <div class="form-group">
                                    <label for="account_type">Account Type</label>
    
                                    <input <%=user.account_type && 'disabled' %> type="text" value="<%=user.account_type%>"
                                        class="form-control" id="account_type">
                                </div>
    
    
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <input type="text" value="<%=user.address%>"
                                        class="form-control" id="address">
                                </div>
                                
                                <div class="form-group">
                                    <label for="state">State</label>
                                    <input type="text" value="<%=user.state%>"
                                        class="form-control" id="state">
                                </div>
                            </div>
    
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="lastname">Last Name</label>
                                    <input <%=user.lastname && 'disabled' %> type="text" value="<%=user.lastname%>"
                                        class="form-control" id="lastname">
                                </div>
    
                                <div class="form-group">
                                    <label for="mothername">Mother's Maiden's Name</label>
                                    <input <%=user.mothername && 'disabled' %> type="text" value="<%=user.mothername%>"
                                        class="form-control" id="mothername">
                                </div>
    
                                <div class="form-group">
                                    <label for="phone-number">Phone Number</label>
                                    <input type="text" value="<%=user.phone_number%>" class="form-control" id="phone_number">
                                </div>
    
                                <div class="form-group">
                                    <label for="occupation">Occupation</label>
                                    <input type="text" value="<%=user.occupation%>" class="form-control" id="occupation">
                                </div>
    
    
                                <div class="form-group">
                                    <label for="city">City</label>
                                    <input type="city" value="<%=user.city%>" class="form-control" id="city">
                                </div>
                                
                                <div class="form-group">
                                    <label for="zipcode">Zipcode</label>
                                    <input type="zipcode" value="<%=user.zipcode%>" class="form-control" id="zipcode">
                                </div>
                            </div>
                        </div>
    
                        
                    
    
                </div> <!-- end card-body-->
                <div class="card-body">
                    <h4 class="mb-3 header-title">Next Of Kins Information</h4>
    
                    
    
                        <div class="row">
                            <div class="col-6">

                                <div class="form-group">
                                    <label for="kin_name">Kin Name</label>
                                    <input type="text" value="<%=user.kin_name%>"
                                        class="form-control" id="kin_name">
                                </div>
                                
                                <div class="form-group">
                                    <label for="kin_address">Kin Address</label>
                                    <input type="text" value="<%=user.kin_address%>"
                                        class="form-control" id="kin_address">
                                </div>
    
                                
                            </div>
    
                            <div class="col-6">

                                <div class="form-group">
                                    <label for="kin_phone_number">Kin Phone Number</label>
                                    <input type="text" value="<%=user.kin_phone_number%>"
                                        class="form-control" id="kin_phone_number">
                                </div>
                                
                                <div class="form-group">
                                    <label for="kin_relation">Kin Relationship</label>
                                    <input type="text" value="<%=user.kin_relation%>"
                                        class="form-control" id="kin_relation">
                                </div>
    
                                
                            </div>
                        </div>
    
                        <button id="submit" type="submit" class="btn btn-primary waves-effect waves-light">Save Changes</button>
                    </form>
    
                </div> <!-- end card-body-->
            </div>
    
        </div>
    </div>
<script src="/js/user/profile/editProfile.js"></script>

<script src="/js/partials/fetcher.js"></script>
<script src="/js/partials/sweetalert.js"></script>

<%-include("../../partials/footer")%>