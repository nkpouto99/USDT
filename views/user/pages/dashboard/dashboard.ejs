<%-include("../../partials/header");%>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-4 col-md-4">
            <div class="card card-stats">
                <!-- Card body -->
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-uppercase text-muted mb-0">Account Balance</h5>
                            <span class="h2 font-weight-bold mb-0">
                                <%=user.balance.toLocaleString() %> USDT
                            </span>
                        </div>
                        <div class="col-auto">
                            <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                                <i class="fa fa-money text-white"></i>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-4">
            <div class="card card-stats">
                <!-- Card body -->
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-uppercase text-muted mb-0">Account Type</h5>
                            <span class="h2 font-weight-bold mb-0">
                                <%=user.plan_name || 'VIP 0'%>
                            </span>
                        </div>
                        <div class="col-auto">
                            <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                                <i class="ni ni-money-coins"></i>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-4">
            <div class="card card-stats">
                <!-- Card body -->
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-uppercase text-muted mb-0">Total Transaction</h5>
                            <span class="h2 font-weight-bold mb-0">
                                <%=totalTrans%>
                            </span>
                        </div>
                        <div class="col-auto">
                            <div class="icon icon-shape bg-gradient-green text-white rounded-circle shadow">
                                <i class="fa fa-history text-white"></i>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 d-none">
            <div class="card card-stats">
                <!-- Card body -->
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-uppercase text-muted mb-0">Account Number</h5>
                            <span class="h2 font-weight-bold mb-0">
                                <%=user.account_no %>
                            </span>
                        </div>
                        <div class="col-auto">
                            <div class="icon icon-shape bg-gradient-info text-white rounded-circle shadow">
                                <i class="fa fa-credit-card fa-fw fa-sm text-white"></i>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



    

    <!--EARNING HISTORY-->
    

    <div class="row">
    
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="text-uppercase text-muted ls-1 mb-1">Quick Actions</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 p-5">
                            <a class="btn btn-danger waves-effect waves-light" href="/user/recharge"><i class="fa fa-bolt" aria-hidden="true"></i> Recharge USDT</a>          
                        </div>
                        <div class="col-6 p-5">
                            <a class="btn btn-dark waves-effect waves-light" href="/user/transfer"><i class="fa fa-exchange" aria-hidden="true"></i> Transfer USDT</a>          
                        </div>
                        <div class="col-6 p-5">
                            <a class="btn btn-success waves-effect waves-light" href="/user/withdraw"><i class="fa fa-upload" aria-hidden="true"></i> Withdraw USDT</a>          
                        </div>
                        <div class="col-6 p-5">
                            <a class="btn btn-primary waves-effect waves-light" href="/user/upgrade"><i class="fa fa-rocket" aria-hidden="true"></i> Upgrade</a>          
                        </div>
                        <div class="col-6 p-5">
                            <a id="tradeStatus" class="btn btn-secondary waves-effect waves-light" data-toggle="modal" data-target="#trade" href="javascript:;"><i class="fa fa-line-chart" aria-hidden="true"></i> Trade USDT</a>          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="col-xl-6 d-none">
            <div class="card">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="text-uppercase text-muted ls-1 mb-1">Account Number</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form class="referral">
    
    
    
                        <div class="form-group mb-3">
                            <div class="input-group">
                                <input type="text" class="form-control" aria-label="Referral Link"
                                    value="<%= user.account_no %>" readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-dark waves-effect waves-light" type="submit">Copy Account
                                        Number</button>
                                </div>
                            </div>
                        </div>
    
    
                    </form>
                </div>
            </div>
        </div>
    
    
    
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="text-uppercase text-muted ls-1 mb-1">List Of Top Investors With Their Various Transactions On The Platform</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <%if(history.length> 0){ %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="bg-light">
                                    <tr class="border-0">
                                        <th class="border-0">#</th>
                                        <th class="border-0">Reference</th>
                                        <th class="border-0">Amount</th>
                                        <th class="border-0">Sender</th>
                                        <th class="border-0">Receiver</th>
                                        <th class="border-0">Type</th>
                                        <th class="border-0">Charges</th>
                                        <th class="border-0">Status</th>
                                        
                                        
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    <%history.map((ht,index)=>{ %>
                                        <tr>
                                            <td>
                                                <%=index + 1 %>
                                            </td>
                                            
                                            <td>
                                                <%=ht.ref%>
                                            </td>

                                            <td>
                                                <%=ht.amount.toLocaleString()%> USDT
                                            </td>
                                            
                                            <td>
                                                <%=ht.senderDetails.username.substr(0,2) + "****"%>
                                            </td>
                                            <td>
                                                <%=ht.reciever_acct.substr(0,2) + "****"%>
                                            </td>
                                            
                                            <td>
                                                <%=ht.type%>
                                            </td>

                                            <td>
                                                <%=ht.charges%> USDT
                                            </td>


                                            <td>
                                                <button type="button" class="btn btn-success btn-sm waves-effect waves-light">Success</button>
                                            </td>
                                            
                                            

                                            


                                        </tr>

                                        
                                        
                                        <% }) %>

                                            
                                </tbody>

                            </table>



                            

                        </div>
                    <%}%>
                </div>
            </div>
        </div>





        <div class="col-12 pt-5">
            <div class="card">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="text-uppercase text-muted ls-1 mb-1">Recent Records Of Successful Withdrawals On The Platform</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <%if(history2.length> 0){ %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="bg-light">
                                    <tr class="border-0">
                                        <th class="border-0">#</th>
                                        <th class="border-0">Reference</th>
                                        <th class="border-0">Amount</th>
                                        <th class="border-0">User</th>
                                        <th class="border-0">Charges</th>
                                        <th class="border-0">Status</th>
                                        
                                        
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    <%history2.map((ht,index)=>{ %>
                                        <tr>
                                            <td>
                                                <%=index + 1 %>
                                            </td>
                                            
                                            <td>
                                                <%=ht.ref%>
                                            </td>

                                            <td>
                                                <%=ht.amount.toLocaleString()%> USDT
                                            </td>
                                            
                                            <td>
                                                <%=ht.username.substr(0,2) + "****"%>
                                            </td>
                                            
                                            <td>
                                                <%=ht.charges%> USDT
                                            </td>

                                            <td>
                                                <button type="button" class="btn btn-success btn-sm waves-effect waves-light">Success</button>
                                            </td>
                                            
                                            

                                            


                                        </tr>

                                        
                                        
                                        <% }) %>

                                            
                                </tbody>

                            </table>



                            

                        </div>
                    <%}%>
                </div>
            </div>
        </div>

    </div>


    <div class="modal fade" id="trade" tabindex="-1" aria-labelledby="exampleModalScrollableTitle" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalScrollableTitle"><i class="bi bi-megaphone"></i> Trade USDT With Leveraging</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    
                    <form id="trade">

                        <div class="form-group">
                            <label for="amount">USDT Amount To Trade With</label>
                            <input type="number" class="form-control" id="amount" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="pin">PIN</label>
                            <input type="text" class="form-control" id="pin" required>
                        </div>
                        
                        <button class="btn btn-primary">
                            <span class="d-flex">Trade</span>
                        </button><button type="button" class="btn btn-secondary" data-dismiss="modal">
                            <span class="d-flex">Close</span>
                        </button>
                        
                    </form>

                </div>
                
            </div>
        </div>
    </div>

    <%if(user.is_trading){%>
        <input hidden type="text" id="isTrading" value="true">
    <%}%>
    

<script src="/js/user/dashboard.js"></script>
<script src="/js/partials/fetcher.js"></script>
<script src="/js/partials/sweetalert.js"></script>
<%-include("../../partials/footer");%>