<%-include("../../partials/header")%>

<div class="container-fluid mt--6">




        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header"><%=title%></h5>
                    <div class="card-body p-0">
                        <%if(history.length> 0){ %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">Reference</th>
                                            <th class="border-0">Amount</th>
                                            <th class="border-0">Reciever</th>
                                            <th class="border-0">Type</th>
                                            <th class="border-0">Charges</th>
                                            <th class="border-0">Date</th>
                                            <th class="border-0">Status</th>
                                            
                                            
                                            

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%history.map((ht,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=index + 1 %>
                                                </td>
                                                
                                                <td>
                                                    <%=ht.ref%>
                                                </td>

                                                <td>
                                                    <%=ht.amount.toLocaleString()%> USDT
                                                </td>
                                                
                                                <td>
                                                    <%=ht.reciever_acct%>
                                                </td>
                                                
                                                <td>
                                                    <%=ht.type%>
                                                </td>

                                                <td>
                                                    <%=ht.charges%> USDT
                                                </td>

                                                <td>
                                                    <%=ht.date%>,<%=ht.time%>
                                                </td>

                                                <td>
                                                    <button type="button" class="btn btn-success btn-sm waves-effect waves-light">Success</button>
                                                </td>
                                                
                                                

                                                


                                            </tr>

                                            
                                            
                                            <% }) %>

                                                
                                    </tbody>

                                </table>



                                

                            </div>
                            <%if(history.length){%>
                    <%-include("../../partials/pagination");%>
                    <%}%>
                            <% }else{%>
                                <h3 class="text-center pt-3">No History Stats At The Moment</h3>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>

<%-include("../../partials/footer")%>